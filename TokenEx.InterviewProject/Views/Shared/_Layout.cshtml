<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="https://test-htp.tokenex.com/Iframe/Iframe-v3.min.js"></script>
    <style>
        .fadeIn {
            display: none;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background:linear-gradient(45deg, #a0c0e0, #f0f0f0)">
        <div class="container">
            <div class="navbar-header">
                <div class="row">
                    <div class="col-md-4 pull-left">
                        <img src="~/Content/surfing_pikachu.png" 
                             style="width:90%;" />
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="fadeIn">Hire me...</div>
        <div class="fadeIn">Nick is great for this position!</div>
        <div class="fadeIn">Hire him...</div>
        <div class="fadeIn">Look at that pikachu!</div>
        <div class="fadeIn">Hire me...</div>
        <div class="fadeIn">Please?</div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Nick McKinney Interview Project</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/additional-methods.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/script.js"></script>
</body>
</html>